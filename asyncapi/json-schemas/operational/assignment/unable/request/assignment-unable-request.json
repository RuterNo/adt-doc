{
  "$id": "https://schemas.ruter.no/adt/ota/api/v3.0/operational/assignment/unable/request/assignment-unable-request.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AssignmentUnableRequest",
  "description": "Request to sign a vehicle on/off, or update an assigned assignment. The vehicle in question is provided in the mqtt topic name. Response will be sent to this vehicle via assignment attempt response.",
  "type": "object",
  "required": [
    "traceId",
    "eventTimestamp"
  ],
  "additionalProperties": true,
  "properties": {
    "eventTimestamp": {
      "$id": "#/properties/eventTimestamp",
      "type": "string",
      "description": "As specified in the [ADT documentation.](https://adt.transhub.io)",
      "format": "date-time"
    },
    "traceId": {
      "$id": "#/properties/traceId",
      "type": "string",
      "description": "A unique identifier - UUID"
    },
    "code": {
      "$id": "#/properties/code",
      "description": "Specification of why the PTO is unable to perform the service",
      "type": "string",
      "examples": [
        "NO_INTENTION"
      ]
    },
    "serviceWindow": {
      "$id": "#/properties/serviceWindow",
      "description": "First departure and last arrival",
      "$ref": "../../common/assignment-service-window.json"
    }
  }
}
