{
  "$id": "https://schemas.ruter.no/adt/ota/api/v2.1/proprietary-extensions/traffic-signal-priority.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TrafficSignalPriority",
  "type": "object",
  "required": [
    "eventTimestamp",
    "message"
  ],
  "description": "The message to be sent to VHF to ensure that the bus is prioritized at the traffic lights. This message is generated by Ruter when approaching an intersection or, when a stop is just before an intersection, after the doors have closed.",
  "additionalProperties": true,
  "properties": {
    "eventTimestamp": {
      "$id": "#/properties/eventTimestamp",
      "type": "string",
      "description": "ISO 8601, UTC"
    },
    "message": {
      "$id": "#/properties/message",
      "type": "string",
      "description": "The 7 byte telegram, HEX encoded"
    }
  },
  "examples": [
    {
      "eventTimestamp": "2020-10-31T08:38:02.749Z",
      "message": "000000FFFFFFF"
    }
  ]
}
