{
  "$id": "https://schemas.ruter.no/adt/ota/api/v3.0/assignment/status/common/assignment-state.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AssignmentState",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "assigned": {
      "$id": "#/properties/assigned",
      "type": "boolean"
    },
    "vehicleTaskid": {
      "$id": "#/properties/vehicleTaskId",
      "type": "string"
    },
    "operatingDate": {
      "$id": "#/properties/operatingDate",
      "type": "string"
    },
    "firstVehicleJourneyId": {
      "$id": "#/properties/firstVehicleJourneyId",
      "type": "string"
    },
    "firstDepartureDateTime": {
      "$id": "#/properties/firstDepartureDateTime",
      "type": "string"
    },
    "code": {
      "$id": "#/properties/code",
      "type": "string",
      "examples": [
        "PLANNED",
        "EXTRA",
        "REPLACEMENT",
        "SHORTENING",
        "CANCELLED",
        "BREAKDOWN",
        "FINISHED",
        "REPLACED"
      ]
    },
    "description": {
      "$id": "#/properties/description",
      "type": "string"
    }
  }
}
